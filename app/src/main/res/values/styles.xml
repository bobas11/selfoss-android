<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="MenuSectionText">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">40dp</item>
		<item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">12dp</item>
		<item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/hint</item>
	</style>

	<style name="MenuSectionDivider">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">8dp</item>
		<item name="android:background">@color/divider</item>
	</style>

	<style name="ArticleDivider">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">0.5dp</item>
		<item name="android:background">@color/article_source_divider</item>
	</style>

    <style name="Widget.Custom.PtrHeader" parent="android:Widget">
        <item name="ptrProgressBarColor">@color/red_selfoss</item>
        <item name="ptrProgressBarStyle">inside</item>
    </style>
</resources>
